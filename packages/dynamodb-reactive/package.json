{
  "name": "dynamodb-reactive",
  "version": "0.1.1",
  "type": "module",
  "description": "A Serverless, Reactive tRPC replacement for AWS DynamoDB",
  "keywords": [
    "dynamodb",
    "reactive",
    "realtime",
    "websocket",
    "aws",
    "serverless",
    "trpc",
    "typescript"
  ],
  "license": "MIT",
  "author": "andreigec@gmail.com",
  "repository": {
    "type": "git",
    "url": ""
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js",
      "default": "./dist/client.js"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "import": "./dist/react.js",
      "default": "./dist/react.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js",
      "default": "./dist/server.js"
    },
    "./core": {
      "types": "./dist/core.d.ts",
      "import": "./dist/core.js",
      "default": "./dist/core.js"
    },
    "./infra": {
      "types": "./dist/infra.d.ts",
      "import": "./dist/infra.js",
      "default": "./dist/infra.js"
    }
  },
  "files": [
    "dist",
    "!**/*.spec.*",
    "!**/*.test.*"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm build",
    "format": "eslint src --fix"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.450.0",
    "@aws-sdk/lib-dynamodb": "^3.450.0",
    "@aws-sdk/util-dynamodb": "^3.450.0",
    "@aws-sdk/client-apigatewaymanagementapi": "^3.450.0",
    "fast-json-patch": "^3.1.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "rimraf": "^5.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "eslint": "8.57.1"
  },
  "peerDependencies": {
    "zod": "^3.22.0",
    "react": "^18.0.0",
    "aws-cdk-lib": "^2.115.0",
    "constructs": "^10.3.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "aws-cdk-lib": {
      "optional": true
    },
    "constructs": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "sideEffects": false
}
